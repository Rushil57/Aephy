@{
    ViewData["Title"] = "Solutions Page";
}
  <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css">

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>


<main id="main" class="main">
    <div class="row">
        <!-- Recent Sales -->
        <div class="col-12">
            <div class="card recent-sales overflow-auto">

                <div class="card-body">
                    <h5 class="card-title">Solutions <span>| Total</span></h5>

                    <a class="btn btn-brand m-2" onclick="OpenAddIndustriesModalPopup();">Create Solution</a>

                    <table class="table table-borderless datatable" id="solutionList">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Sub Title</th>
                                <th scope="col">Description</th>
                                <th>Image</th>
                                <th scope="col">Services</th>
                                <th scope="col">Industries</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div><!-- End Recent Sales -->
    </div>

    <div class="modal fade" id="addSolutionModal" tabindex="-1" aria-labelledby="addSolutionModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create Solution</h4>
                    <a class="close" onclick="ResetForm();"><i class="bi bi-x-circle"></i></a>
                </div>
                <div class="modal-body p-0">
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    @*<h5 class="card-title">Vertical Form</h5>*@

                                    <!-- Vertical Form -->
                                    <!-- Vertical Form -->
                                    <form class="row g-3 mt-3" name="addSolutionForm">
                                        <input type="hidden" id="SolutionId" value="0">
                                        <input type="hidden" id="ImagePath" value="">

                                        <div class="col-12">
                                            <label for="SolutionTitle" class="form-label">Solution Title</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="SolutionTitle" name="SolutionTitle">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="Solution_SubTitle" class="form-label">Solution SubTitle</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="Solution_SubTitle" name="Solution_SubTitle">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="SolutionDescription" class="form-label">Solution Description</label>
                                            <div class="input-group">
                                                <textarea class="form-control" id="SolutionDescription" name="SolutionDescription" style="height:100px;"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-12" id="img-id">
                                            <label for="SolutionImage" class="form-label">Image</label>
                                            <div class="input-group">
                                                <input type="file" class="form-control" id="SolutionImage" name="SolutionImage" />
                                               
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="Services" class="form-label">Services</label>
                                            <div class="input-group" id="services">
                                                <select data-placeholder="Choose tags ..." name="tags[]" multiple class="chosen-select" id="drp-services">
                                                   
                                                  </select>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="Industries" class="form-label">Industries</label>
                                            <div class="input-group" id="industries">
                                                  <select data-placeholder="Choose tags ..." name="tags[]" multiple class="chosen-select" id="drp-industries">
                                                   
                                                  </select>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-brand">Submit</button>
                                            <button type="reset" class="btn btn-secondary" onclick="ResetForm();">Reset</button>
                                        </div>
                                    </form><!-- Vertical Form -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    $(function () {
        $("form[name='addSolutionForm']").validate({
            rules: {
                SolutionTitle: { required: true },
                Solution_SubTitle: { required: true },
                SolutionDescription: { required: true },
                SolutionImage: { required: true }
            },
            messages: {
                SolutionTitle: { required: "Please enter solution title" },
                Solution_SubTitle: { required: "Please enter sub title" },
                SolutionDescription: { required: "Please enter description" },
                SolutionImage: { required: "Please chhose an image" }
            },
            errorPlacement: function (error, element) {
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                }
                else {
                    error.insertAfter(element);
                }
            },
            submitHandler: function (form) {
                addSolution()
            }
        });
        GetSolutionList()
      $(".chosen-select").chosen();
       BindServices()
       BindIndustries()
    });

    function addSolution() {
          var fileUpload = $("#SolutionImage").get(0);  
            var files = fileUpload.files;

           var SolutionData = {
            Id: $("#SolutionId").val(),
            Title: $("#SolutionTitle").val(),
            SubTitle: $("#Solution_SubTitle").val(),
            Description: $("#SolutionDescription").val(),
            solutionServices: $("#drp-services").val(),
            solutionIndustries: $("#drp-industries").val()
        };

        var formData = new FormData();
        for (var i = 0; i < files.length; i++) {  
               // fileData.append(files[i].name, files[i]);  
                 formData.append("httpPostedFileBase", files[i]);
            }  
        formData.append("SolutionData", JSON.stringify(SolutionData));

            $.ajax({  
                url: '/Solutions/AddorEditSolution',  
                type: "POST",  
                contentType: false, 
                processData: false,
                 data: formData,
            dataType: 'json',
                success: function (result) {  
                    alert(result);  
                    ResetForm();
                    GetSolutionList();
                },  
                error: function (err) {  
                    alert("Success");  
                    ResetForm();
                GetSolutionList();
                }  
            });     

    }

    function GetSolutionList() {
        $.ajax({
            type: "Get",
            url: "@Url.Action("GetSolutionsList", "Solutions")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                $('#solutionList').DataTable({
                    destroy: true,
                    data: result.Result,
                    "columns": [
                        {
                            "data": "Id",
                            "className": "cls-Solution"
                        },
                        { "data": "Title" },
                        { "data": "SubTitle" },
                        { "data": "Description" },
                        {
                            "data": "ImageUrlWithSas",
                            "render": function (data, type, row) {
                                return '<img src="' + data +'" alt="Image" height="70" width="150" />';
                            }
                        },
                        { "data": "Services" },
                        { "data": "Industries" },
                        {
                            "data": "Id",
                            "render": function (data, type, row) {
                                return '<a class="btn btn-danger btn-sm" style="color: white;" onclick=DeleteSolution("' + row.ImageUrlWithSas + '","' + row.ImagePath + '",' + row.Id + ')>Delete</a>';
                            }
                        }

                    ]
                });


            },
            error: function (result) {
                alert("failure");
            }
        });
    }

    function ResetForm() {
        $("#solution-img").remove()
        $("#SolutionTitle").val("");
        $("#Solution_SubTitle").val("");
        $("#SolutionDescription").val("");
        $("#SolutionImage").val("");
        $('#drp-services').val("").trigger('chosen:updated');
        $("#drp-industries").val("").trigger('chosen:updated');
        $("#addSolutionModal").modal('hide'),
        $("#SolutionId").val(0)
    }

    function DeleteSolution(ImageUrlWithSas,ImagePath,Id) {
        
        if (confirm('Are you sure want to delete solution?')) {
            var ServiceData = {
                Id: Id,
                ImagePath: ImagePath,
                ImageUrlWithSas: ImageUrlWithSas

            };
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteSolutions", "Solutions")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(ServiceData),
                success: function (result) {
                    alert(result.Message);
                    GetSolutionList();

                },
                error: function (result) {
                    alert("Error occured..");
                }
            });
        }
    }

    function CloseAddIndustriesModalPopup() {
        $("#addSolutionModal").modal('hide')
    }
    function OpenAddIndustriesModalPopup() {
        $("#addSolutionModal").modal('show')
    }

    function BindServices() {
        $.ajax({
            type: "Get",
            url: "@Url.Action("GetServices", "Lookup")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                $.each(result.Result, function (data, value) {
                    $("#drp-services").append($("<option     />").val(value.Id).text(value.ServicesName));
                })
                $('#drp-services').trigger('chosen:updated');
            },
            error: function (result) {
                alert("failure");
            }
        });
    }

    function BindIndustries() {
        $.ajax({
            type: "Get",
            url: "@Url.Action("GetIndustries", "Lookup")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                $.each(result.Result, function (data, value) { 
                    $("#drp-industries").append($("<option     />").val(value.Id).text(value.IndustryName));
                })
                $('#drp-industries').trigger('chosen:updated');
            },
            error: function (result) {
                alert("failure");
            }
        });
    }

    $('#solutionList').on('click', '.cls-Solution', function () {
        var serviceId = $(this).closest('tr').find('td:eq(0)').text();
        serviceId = parseInt(serviceId)

        var ServiceData = {
            Id: serviceId,
        };
        $.ajax({
            type: "POST",
            url: "@Url.Action("GetSolutiondataById", "Solutions")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify(ServiceData),
            success: function (result) {
                if(result != null){
                    $("#addSolutionModal").modal('show')
                    $("#solution-img").remove()
                    $("#SolutionId").val(result.Result.Id)
                    $("#SolutionTitle").val(result.Result.Title)
                    $("#Solution_SubTitle").val(result.Result.SubTitle)
                    $("#SolutionDescription").val(result.Result.Description)
                    //$("#SolutionImage").val(result.Result.ImageUrlWithSas)
                    //$("#solution-img").show();
                    $(" <img src=" + result.Result.ImageUrlWithSas + " alt='Image' id='solution-img' style='height:200px;width:200px;'/>").insertAfter("#img-id");

                    var industryvalues = new Array();
                    var servicesvalues = new Array();

                    $.each(result.IndustryResult, function (index, value) {
                        industryvalues.push(value.IndustryId)
                    });
                   
                     $.each(result.ServiceResult, function (index, value) {
                        servicesvalues.push(value.ServicesId)
                    });
                    console.log(industryvalues)
                    console.log(servicesvalues)
                    $('#drp-services').val(servicesvalues).trigger('chosen:updated');
                    $('#drp-industries').val(industryvalues).trigger('chosen:updated');
                     //$("#Services").val(servicesvalues);
                     // $("#Industries").val(industryvalues);
                }

            },
            error: function (result) {
                alert("Error occured..");
            }
        });
    });
</script>