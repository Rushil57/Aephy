
@{
    ViewData["Title"] = "Services Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="row">
        <!-- Recent Sales -->
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="card-body">
                    <h5 class="card-title">Services</h5>

                    <a class="btn btn-brand m-2" onclick="OpenAddServicesModalPopup();">Add Service</a>

                    <table class="table table-borderless datatable" id="serviceList">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Service Name</th>
                                <th scope="col">Active</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div><!-- End Recent Sales -->
    </div>

    <div class="modal" id="addServicesModal" tabindex="-1" aria-labelledby="guidelineModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Service</h4>
                    <a class="close" onclick="ResetServiceForm();"><i class="bi bi-x-circle"></i></a>
                </div>
                <div class="modal-body p-0">
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    @*<h5 class="card-title">Vertical Form</h5>*@

                                    <!-- Vertical Form -->
                                    <form class="row g-3 mt-3" name="addServicesForm">
                                        <input type="hidden" id="ServiceId" value="0">
                                        <div class="col-12">
                                            <label for="ServiceName" class="form-label">Service Name</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="ServiceName" name="ServiceName">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="isActive" class="form-label">Active</label>
                                            <div class="col-12 d-flex">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-brand">Submit</button>
                                            <button type="reset" class="btn btn-secondary" onclick="ResetServiceForm();">Reset</button>
                                        </div>
                                    </form><!-- Vertical Form -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</main>
<script>
    $(function () {
        $("form[name='addServicesForm']").validate({
            rules: {
                ServiceName: { required: true },
            },
            messages: {
                ServiceName: { required: "Please enter service name" },
            },
            errorPlacement: function (error, element) {
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                }
                else {
                    error.insertAfter(element);
                }
            },
            submitHandler: function (form) {
                AddService()
            }
        });

        GetServiceList()
    });

    function AddService() {
        var ServiceData = {
            Id: $("#ServiceId").val(),
            ServiceName: $("#ServiceName").val(),
            Active: $("#isActive").is(':checked')
        };
        $.ajax({
            type: "POST",
            url: "@Url.Action("AddServiceForm", "Lookup")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify(ServiceData),
            success: function (result) {
                alert(result.Message);
                ResetServiceForm();
                GetServiceList();

            },
            error: function (result) {
                alert("Error occured..");
            }
        });
    }

    function ResetServiceForm() {
        $("#ServiceId").val(0)
        $("#addServicesModal").modal('hide')
        $("#ServiceName").val("")
        $("#isActive").prop('checked', false);
    }
   
    function OpenAddServicesModalPopup() {
        $("#addServicesModal").modal('show')
    }

    function GetServiceList() {
        $.ajax({
            type: "Get",
            url: "@Url.Action("GetServices", "Lookup")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                $('#serviceList').DataTable({
                    destroy: true,
                    data: result.Result,
                    "columns": [
                        {
                            "data": "Id",
                            "render": function (data, type, row) {
                                return '<a class="cls-service" onclick=GetDataById(' + data + ')>' + data + '</a>';
                            }
                        },
                        { "data": "ServicesName" },
                        {
                            "data": "Active",
                            "render": function (data, type, row) {
                                if (data == true) {
                                    return '<span class="badge bg-success">'+ data +'</span>'
                                }
                                else {
                                    return '<span class="badge bg-danger">'+ data +'</span>'
                                }
                            }
                        },
                        {
                            "data" : "Id",
                            "render": function (data, type, row) {
                                return '<a class="btn btn-danger btn-sm" style="color: white;" onclick=DeleteServices(' + data + ')>Delete</a>';
                            }
                        }

                    ]
                });


            },
            error: function (result) {
                alert("failure");
            }
        });
    }

    function DeleteServices(id){
        if (confirm('Are you sure want to delete services?')) {
            var ServiceData = {
                Id: id,
            };
            $.ajax({
                type: "POST",
                url: "@Url.Action("DeleteServices", "Lookup")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(ServiceData),
                success: function (result) {
                    alert(result.Message)
                    GetServiceList()

                },
                error: function (result) {
                    alert("Error occured..");
                }
            });
        }
      
    }

    function GetDataById(Id){
        if (Id != 0) {
            var ServiceData = {
                Id: Id,
            };

            $.ajax({
                type: "POST",
                url: "@Url.Action("GetServicesById", "Lookup")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(ServiceData),
                success: function (result) {
                    if (result != null) {
                        $("#addServicesModal").modal('show')
                        $("#ServiceId").val(result.Result.Id);
                        $("#ServiceName").val(result.Result.ServicesName);
                        var active = result.Result.Active;
                        if (active) {
                            $("#isActive").prop('checked', true);
                        }
                    }
                },
                error: function (result) {
                    alert("Error occured..");
                }
            });
        }
    }
</script>