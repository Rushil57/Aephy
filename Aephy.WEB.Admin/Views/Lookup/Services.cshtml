    <div class="modal fade" id="addServicesModal" tabindex="-1" aria-labelledby="guidelineModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Services</h4>
                    <a class="close" data-dismiss="#addServicesModal" onclick="CloseAddServicesModalPopup();"><i class="bi bi-x-circle"></i></a>
