    function GetDataById(Id) {
        if (Id != 0) {
            var ServiceData = {
                Id: Id,
            };

            $.ajax({
                type: "POST",
                url: "@Url.Action("GetServicesById", "Lookup")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(ServiceData),
                success: function (result) {
                    if (result.Message == "Success"){
                        if (result != null) {
                            var data = result.Result;
                            $("#addServicesModal").modal('show')
                            $("#ServiceId").val(data.Id);
                            $("#ServiceName").val(data.ServicesName);
                            var active = data.Active;
                            if (active) {
                                $("#isActive").prop('checked', true);
                            }
                            if (data.IsActiveFreelancer) {
                                $("#freelancerActive").prop('checked', true);
                            }
                            if (data.IsActiveClient) {
                                $("#clientActive").prop('checked', true);
                            }
                        }
                    }
                    else{
                        showToaster("error", "Error !", result.Message);
                    }
                },
                error: function (result) {
                    //alert("Error occured..");
                    showToaster("error", "Error !", "Something went wrong !!");
                }
            });
        }
    }
</script>